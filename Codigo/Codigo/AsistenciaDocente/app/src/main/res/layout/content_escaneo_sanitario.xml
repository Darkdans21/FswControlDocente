<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_escaneo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fsw_android.asistenciadocente.Escaneo"
    tools:showIn="@layout/app_bar_escaneo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/codigo_barra_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_verde_black_border"
            android:layout_margin="16dp"
            android:text="@string/button_title_escaner_barras"
            android:textColor="@color/color_Blanco"
            android:onClick="escanerBarraOnClick"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_codigo_barra"
            android:id="@+id/imageView_barras" />

        <Button
            android:id="@+id/codigo_qr_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/boton_verde_black_border"
            android:text="@string/button_title_escaner_qr"
            android:textColor="@color/color_Blanco"
            android:onClick="escanerQROnClick"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_codigo_qr"
            android:id="@+id/imageViewQR" />
    </LinearLayout>


</LinearLayout>