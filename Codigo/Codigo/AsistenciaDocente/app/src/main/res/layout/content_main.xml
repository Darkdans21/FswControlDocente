<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/fecha_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Miercoles 23 de enero 2017" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_iniciar_recorrido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_verde_black_border"
                android:drawableLeft="@drawable/play"
                android:drawablePadding="16dp"
                android:onClick="recorridoOnClick"
                android:text="Iniciar Recorrido"
                android:textColor="@color/color_Blanco" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_agregar_maestro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_verde_black_border"
                android:drawableLeft="@drawable/plusi"
                android:drawablePadding="16dp"
                android:text="Agregar maestro"
                android:textColor="@color/color_Blanco" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_nuevo_reporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_verde_black_border"
                android:drawableLeft="@drawable/list"
                android:drawablePadding="16dp"
                android:text="Nuevo Reporte"
                android:textColor="@color/color_Blanco" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>


