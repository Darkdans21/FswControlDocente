            android:name=".Escaneo"
            android:label="@string/title_activity_escaneo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Registro_docentes"
            android:label="@string/title_activity_registro_docentes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Registro_sanitarios"
            android:label="@string/title_activity_registro_sanitarios"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".huella_correcta"
            android:label="@string/title_activity_huella_correcta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".huella_incorrecta"
            android:label="@string/title_activity_huella_incorrecta"
